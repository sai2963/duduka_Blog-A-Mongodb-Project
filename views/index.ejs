<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>My Blog</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Blog</a>
          
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <a href="/index" class="btn btn-outline-default" type="submit">AllPosts</a>
              <a href="/form" class="btn btn-outline-success" type="submit">CreatePost</a>
            </form>
          </div>
        </div>
      </nav>
<h3 style="text-align: center;">All Posts</h3>
<% if (!posts||posts.length===0){%>
  <p>No posts Found - maybe start creating some?</p>
  <a class="btm" href="/form"></a>
<%} else {%>
  
    <% posts.forEach(post => {%>
      <div class="card" style="width: 28rem;">

        <div class="card-body">
          <h5 class="card-title"><%=post.title%></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%=post.summary%></h6>
          <p class="card-text"><%=post.content%></p>
          <div>
            <form action="/post/delete/<%=post._id %>" method="post">
              <button class="btn btn-outline-success" type="submit">Delete Post</button>
            </form>
            
            <a href="/index/update/<%=post._id %>" class="btn btn-outline-success">Edit Post</a>
            <a href="/index/post-detail/<%=post._id%>" class="btn btn-outline-success">View Post</a>
          </div>
          
        </div>
      </div>
    <% }); %>
  
  <%}%>
      
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  
  <style>
    .card{
        width: 28rem;
        margin: 20px auto;
    }
  </style>
</html>